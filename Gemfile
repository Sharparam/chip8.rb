source 'https://rubygems.org'

gem 'rake', '~> 10.0'

gem 'rubysdl', '~> 2.2'

# taf2's version of wavefile allows reading/writing
# from IO streams and not just physical files.
gem 'wavefile', github: 'taf2/wavefile'

group :development do
  gem 'pry', '~> 0.10'
end

group :test do
  gem 'rspec', '~> 3.0'
end

group :doc do
  gem 'yard', '~> 0.9'
end
